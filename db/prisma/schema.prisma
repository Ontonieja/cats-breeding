datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  slug      String   @unique
  cover     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cat {
  id        Int      @id @default(autoincrement())
  slug      String?   @unique
  name      String?
  description String
  genderGroup    Gender?
  photos    CatPhoto[]
  documents CatDocument[]
}

model CatPhoto{
  id        Int      @id @default(autoincrement())
  catId     Int
  Cat       Cat    @relation(fields: [catId], references: [id])
  Photo     String
}

model CatDocument{
  id        Int      @id @default(autoincrement())
  catId     Int
  Cat       Cat    @relation(fields: [catId], references: [id])
  document  String
}

enum Gender {
  MALE
  FEMALE
  KID
}