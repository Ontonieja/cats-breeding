datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  slug      String   @unique
  cover     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cat {
  id          Int           @id @default(autoincrement())
  slug        String?       @unique
  name        String?
  description String
  birthday    String?
  color       String?
  blood       String?
  father      String?
  Mother      String?
  genderGroup Gender?
  photos      CatPhoto[]
  documents   CatDocument[]
  gallery     CatGallery[]
}

model CatPhoto {
  id         Int          @id @default(autoincrement())
  catId      Int
  Cat        Cat          @relation(fields: [catId], references: [id])
  photo      String
  primary    Boolean?
  catGallery CatGallery[]
}

model CatGallery {
  id       Int      @id @default(autoincrement())
  catId    Int
  photoId  Int      @unique
  Cat      Cat      @relation(fields: [catId], references: [id])
  CatPhoto CatPhoto @relation(fields: [photoId], references: [id], onDelete: Cascade)
}

model CatDocument {
  id       Int    @id @default(autoincrement())
  catId    Int
  Cat      Cat    @relation(fields: [catId], references: [id])
  document String
}

enum Gender {
  MALE
  FEMALE
  KID
}

model GalleryImage {
  id  Int    @id @default(autoincrement())
  url String
}
